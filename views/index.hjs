<!DOCTYPE html>
<html>
  <head>
    <title></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
    <script src="//cdnjs.cloudflare.com/ajax/libs/hogan.js/2.0.0/hogan.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script type="text/javascript" src='/javascripts/main.js'></script>

  </head>
  <body>
  	<div class='container'>
  		<div class='well'>
  			<h4>Select Meeting Duration</h4>
  		</div>

  		<div class='well'>
				<div class="btn-group" id="duration-select" data-toggle="buttons">
					<label class="btn btn-primary active">
						<input type="radio" name="duration" id="1" autocomplete="off" checked> 15min
					</label>
					<label class="btn btn-primary">
						<input type="radio" name="duration" id="2" autocomplete="off"> 30min
					</label>
					<label class="btn btn-primary">
						<input type="radio" name="duration" id="3" autocomplete="off"> 45min
					</label>
					<label class="btn btn-primary">
						<input type="radio" name="duration" id="4" autocomplete="off"> 1hour
					</label>
				</div>
  		</div>
  	</div> 
  	<div class='container'>
  		<div class='well'>
  			<h4>Select Timezone</h4>
  		</div>

  		<div class='well'>
			<div class='row'>
	  			<div class='col-lg-4'>

					<div class="btn-group" id="time-zone-select" data-toggle="buttons">
						<label class="btn btn-primary active">
							<input type="radio" name="zone" id="1" autocomplete="off" checked> Eastern
						</label>
						<label class="btn btn-primary">
							<input type="radio" name="zone" id="2" autocomplete="off"> Central
						</label>
						<label class="btn btn-primary">
							<input type="radio" name="zone" id="3" autocomplete="off"> Mountain
						</label>
						<label class="btn btn-primary">
							<input type="radio" name="zone" id="4" autocomplete="off"> Pacific
						</label>
					</div>

				</div>
			</div>
		</div>
  	</div>

  	<div class='container'>
  		<div class='well'>
  			<h4>Select Available Meeting Times</h4>
  		</div>

		<div class='well'>
			<div class='row' id='time-select'></div>
		</div>
	</div>

	<div class='container'>
  		<div class='row'>
			<table class='time-table table table-striped'>
				<tr>
					<td>Time Eastern</td>
					<td>Time Central</td>
					<td>Time Mountain</td>
					<td>Time Pacific</td>
					<td> </td>
				</tr>
			</table>
		</div>
	</div>

	<div class='container'>

		<div class="col-lg-6">
		    <div class="input-group">
				<input type="email" class="form-control" placeholder="Recipient Email">
					<span class="input-group-btn">
						<button class="btn btn-default" id='send-email' type="button">Generate Email</button>
					</span>
		    </div>
		</div>

	</div>

	</div>

  	</div>
  </body>
</html>